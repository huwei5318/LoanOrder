<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="266px"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_ipdialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:text="更新通知"
            android:textColor="@color/black"
            android:textSize="29px" />

        <TextView
            android:id="@+id/IPDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:gravity="center"
            android:text="title"
            android:textColor="#ff0001"
            android:textSize="27px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/IPDialogLeftButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#9a9a9a"
                android:textSize="33px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/IPDialogRightButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#1276eb"
                android:textSize="33px" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>