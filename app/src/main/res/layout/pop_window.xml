<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="496px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@mipmap/bg_rela"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="放款成功凭证"
                android:textColor="@color/white"
                android:textSize="33px" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/successimage"
            android:layout_width="match_parent"
            android:layout_height="300px"
            fresco:progressBarAutoRotateInterval="3000"
            fresco:progressBarImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/icon_success"
            fresco:placeholderImageScaleType="center"
            fresco:progressBarImage="@mipmap/icon_simimage" />
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_rela"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="取消"
                android:textColor="@color/gray"
                android:textSize="27px" />
            <View
                android:background="@color/gray"
                android:layout_width="2px"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="提交"
                android:textColor="@color/orgred"
                android:textSize="27px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>