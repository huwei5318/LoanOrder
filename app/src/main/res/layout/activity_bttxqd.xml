<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_btqd"
            android:layout_below="@+id/rela">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5px"
                        android:layout_height="44px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@color/orgred" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:text="基本信息"
                        android:textColor="@color/orgred"
                        android:textSize="33px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="姓名:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="性别:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusersex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="联系方式:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusertel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:text="客户已经公开,抢单后可见"
                        android:textColor="@color/orgred"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="申请时间:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="所在城市:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusercity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5px"
                        android:layout_height="44px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:background="@color/orgred" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:text="平台信息"
                        android:textColor="@color/orgred"
                        android:textSize="33px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="平台:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusertimemoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="金额:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusermoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60px"
                        android:text="期限:"
                        android:textColor="@color/black"
                        android:textSize="27px" />

                    <TextView
                        android:id="@+id/btqdusermonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/black"
                        android:textSize="27px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60px"
                    android:layout_marginRight="60px"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:layout_width="620px"
                    android:layout_height="200px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="10px"
                    android:background="@drawable/bg_money"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="订单价格"
                        android:textColor="@color/orgred"
                        android:textSize="23px" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="60px"
                        android:layout_marginRight="60px"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/change"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="33px" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_btqd"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="620px"
            android:layout_height="88px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px"
            android:background="@drawable/buttonbg"
            android:text="立即抢单"
            android:textColor="@color/white"
            android:textSize="33px" />
    </RelativeLayout>

</layout>
