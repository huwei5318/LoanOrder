<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sy.alex_library.ui.BaseViewPager
            android:id="@+id/main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view">

        </com.sy.alex_library.ui.BaseViewPager>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/l"
            android:background="#e5e5e5" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/home_firstPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_icon_home"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginTop="15px"
                    android:background="@mipmap/home_icon_home_red" />

                <TextView
                    android:id="@+id/home_txt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11px"
                    android:text="首页"
                    android:textColor="@color/text_black"
                    android:textSize="18px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_icon_order"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginTop="15px"
                    android:background="@mipmap/tab2_default" />

                <TextView
                    android:id="@+id/home_txt_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11px"
                    android:text="发现"
                    android:textColor="@color/text_black"
                    android:textSize="18px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_mine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_icon_mine"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginTop="15px"
                    android:background="@mipmap/home_icon_mine_while" />

                <TextView
                    android:id="@+id/home_txt_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11px"
                    android:text="我的"
                    android:textColor="@color/text_black"
                    android:textSize="18px" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.sxw.loan.loanorder.fragment.SlidingMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />
</android.support.v4.widget.DrawerLayout>
