<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/listview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="30px"
                android:textColor="@color/black"
                android:textSize="33px" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/three"
                android:textSize="27px" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaaaaa"
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:layout_below="@+id/l"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/work"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="30px"
                android:textSize="33px" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/whitelist"
            android:layout_width="match_parent"
            android:layout_height="44px"
            android:layout_below="@+id/lineaaaaa"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="30px"
                android:textColor="@color/green"
                android:textSize="27px" />

            <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#f14f4d"
                android:textSize="27px" />
        </LinearLayout>
        <TextView
            android:layout_below="@+id/whitelist"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="44px"
            android:gravity="center|left"
            android:paddingBottom="5px"
            android:paddingLeft="30px"
            android:paddingRight="5px"
            android:paddingTop="5px"
            android:textColor="@color/three"
            android:textSize="27px" />
        <ImageView
            android:id="@+id/imageSta"
            android:layout_width="109px"
            android:layout_height="109px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px" />
    </RelativeLayout>
</LinearLayout>